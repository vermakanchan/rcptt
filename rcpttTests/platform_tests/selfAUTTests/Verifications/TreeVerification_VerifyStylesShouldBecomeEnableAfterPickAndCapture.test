with [get-editor Verification | get-section "Widget Tree"] {
    get-combo -after [get-label "Verify styles:"] | select "Ignore Styled Text"
    with [get-tree] {
        select Project | activate-cell-edit
        with [get-editbox] {
            key-type Right
            set-text "Project.*"
            key-type Enter
        }	
        apply-cell-edit -deactivate
    }
}


